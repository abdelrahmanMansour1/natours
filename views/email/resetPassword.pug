extends baseEmail 

block content
    // CONTENT
    p Hi #{firstName},
    p Forgot your Password? please submit a PATCH request with your new password and confirmPassword  to : #{url}.
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset Password
    p If you didnt forget your password please ignore this email!